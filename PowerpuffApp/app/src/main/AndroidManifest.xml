<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PowerpuffApp"
        tools:targetApi="31">

        <!-- Activity para ver as respostas -->
        <activity
            android:name=".ResponsesActivity"
            android:exported="false" />

        <!-- Activity para detalhes dos personagens -->
        <activity
            android:name=".CharacterDetailActivity"
            android:exported="false" />

        <!-- Nova Activity para informações da Florzinha -->
        <activity
            android:name=".FlorzinhaInfoActivity"
            android:exported="false" />

        <!-- Nova Activity para informações da Lindinha -->
        <activity
            android:name=".LindinhaInfoActivity"
            android:exported="false" />

        <!-- Nova Activity para informações da Docinho -->
        <activity
            android:name=".DocinhoInfoActivity"
            android:exported="false" />

        <!-- Activity principal -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
